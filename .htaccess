# Apache Konfiguration für Berufsmesse-Anwendung

# PHP Einstellungen
php_flag display_errors off
php_value upload_max_filesize 10M
php_value post_max_size 12M
php_value max_execution_time 300

# Sicherheit
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>

# Schutz für .htaccess selbst
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Directory Listing deaktivieren
Options -Indexes

# Error Pages (optional)
# ErrorDocument 404 /berufsmesse/404.php
# ErrorDocument 403 /berufsmesse/403.php
